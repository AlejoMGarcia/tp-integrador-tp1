@model IEnumerable<MVCBasico.Models.IngresoSubastaVM>

@{
    ViewData["Title"] = "Ingresar a Subasta";
}


<h1>
    Ingresar a Subastas
</h1>

<hr />


@foreach (var item in Model)
{

    <div class="left clearfix ">
        <div class="grid-card app-element ">
            <!-- card data / details -->

            <div class="item-name truncate">
                <div title=""></div> <span class="truncate" title="@item.Codigo"> @item.Codigo </span>
            </div>


            <div class="item-data-values">
                <div class="data-item">
                    <span class="label truncate">Fecha Inicio</span>
                    <span class="value truncate" title="@item.FechaInicio">@item.FechaInicio</span>
                </div>
                <div class="data-item">
                    <span class="label truncate">Fecha Finalización</span>
                    <span class="value truncate" title="@item.FechaFinalizacion">@item.FechaFinalizacion</span>
                </div>
                <div class="data-item">
                    <span class="label truncate">Productos de Arte:</span>
                    <span class="value truncate" title="@item.CantidadProductosArte">@item.CantidadProductosArte</span>
                    |
                    <span class="label truncate">Productos Mueble:</span>
                    <span class="value truncate" title="@item.CantidadProductosMueble">@item.CantidadProductosMueble</span>
                </div>
                <div class="data-item">
                    <span class="label truncate">Cantidad de Productos</span>
                    <span class="value truncate" title="@item.CantidadProductos">@item.CantidadProductos</span>
                </div>

                <br />

                <a asp-action="GetInto" asp-route-subastaId="@item.SubastaId" asp-route-usuarioId="@item.UsuarioId">
                    <input type="button" value="Ingresar a Subasta" class="btn btn-secondary" />
                </a>
            </div>
        </div>
    </div>

    <hr />
}